<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="timbauer.loldraftcalculator.DraftScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="75dp"
            android:layout_height="fill_parent"
            android:id="@+id/blue_side_layout"
            android:background="@drawable/layout_border">
            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="70dp"
                android:numColumns="1"
                android:layout_gravity="center_horizontal"
                android:id="@+id/blue_side">

            </GridView>
        </LinearLayout>

        <GridView
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal"
            android:columnWidth="40dp"
            android:numColumns="4"
            android:id="@+id/all_champs_view"
            android:fastScrollEnabled="true">



        </GridView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="75dp"
            android:layout_height="fill_parent"
            android:id="@+id/red_side_layout"
            android:background="@drawable/layout_border">
            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="70dp"
                android:numColumns="1"
                android:layout_gravity="center_horizontal"
                android:id="@+id/red_side"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:id="@+id/bans"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/blue_side_bans_layout"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/layout_border">

            <GridView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="70dp"
                android:numColumns="3"
                android:layout_gravity="center_horizontal"
                android:id="@+id/blue_side_bans"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/red_side_bans_layout"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:background="@drawable/layout_border">

            <GridView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="70dp"
                android:numColumns="3"
                android:layout_gravity="center_horizontal"
                android:id="@+id/red_side_bans"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:text="Home"
        android:onClick="moveToHomeScreen"/>


</LinearLayout>

